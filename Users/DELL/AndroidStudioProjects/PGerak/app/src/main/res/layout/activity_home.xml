<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/sakura">

    <!-- Floating CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        app:cardElevation="15dp"
        app:cardBackgroundColor="#F8F8F8"
        app:cardUseCompatPadding="true"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Gambar Profil dengan Frame -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jinhsi"/>
            </androidx.cardview.widget.CardView>

            <!-- Nama User -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Welcome!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#f75e9e"
                android:paddingTop="16dp"
                android:fontFamily="sans-serif-light" />

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hope you enjoy using my app~"
                android:textSize="15sp"
                android:textColor="#feb9b2"
                android:paddingTop="6dp"
                android:gravity="center"
                android:textStyle="italic|bold" />

            <!-- Button View Profile -->
            <Button
                android:id="@+id/btn_view_profile"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:text="View Profile"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:backgroundTint="#f75e9e"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>